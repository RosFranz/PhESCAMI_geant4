#
# Test macro file for exampleADHD
#

/run/initialize

# Turn off randomization 
/ADHD/generator/randomizePrimary false
/ADHD/generator/sigmaMomentum 0. 
/ADHD/generator/sigmaAngle 0.
/run/printProgress 5
#
/ADHD/detector/armAngle 30. deg
/gun/particle proton
/ADHD/generator/momentum 100. GeV
/ADHD/field/value 100. tesla
/run/beamOn 5
